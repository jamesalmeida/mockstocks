%h1
	-if @user
		=@user.username + "'s"
		Transactions

%form{action: '/transactions', method: 'POST'}
	%ul.pretty_form
		%li
			%label{for: 'symbol'} Stock Symbol
			%input{type: 'text', name: '[transaction]symbol'}
		%li
			%label{for: 'shares'} Number of Shares
			%input{type: 'text', name: '[transaction]shares'}
		%li
			%input{type: 'radio', name: '[transaction]transaction_type', value: '1'} Buy
			%input{type: 'radio', name: '[transaction]transaction_type', value: '2'} Sell
	%button{type: 'submit', value: 'Complete Transaction'} Complete Transaction